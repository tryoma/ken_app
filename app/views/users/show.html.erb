<% provide(:title, @user.name) %>
<div>
  <h1><%= @user.name %>の個人ページ</h1>
</div>
<div>
  <div class="col-md-6">
    <% if @user.profile.image_name.present? %>
     <%= image_tag @user.profile.image_name_url,:size => '500x500' %>
    <% else %>
     <%= image_tag 'no-image.png',:size => '500x500' %>
    <% end %>
  </div>
</div>
<div>
  <div class="col-md-6">
    <table class="table table-bordered table-condensed user-table">
      <tr>
        <td>生年月日</td>
        <td>
          <% if @user.profile.birth_day.present? %>
            <%= @user.profile.birth_day %>
          <% else %>
            未記入
          <% end %>
        </td>
      </tr>
      <tr>
        <td>段位</td>
        <td>
          <% if @user.profile.grade.present? %>
            <%= @user.profile.grade %>
          <% else %>
            未記入
          <% end %>
        </td>
      </tr>
      <tr>
        <td>出身道場</td>
        <td>
          <% if @user.profile.dojo.present? %>
            <%= @user.profile.dojo %>
          <% else %>
            未記入
          <% end %>
        </td>
      </tr>
      <tr>
        <td>出身中学</td>
        <td>
          <% if @user.profile.junior_high.present? %>
            <%= @user.profile.junior_high %>
          <% else %>
            未記入
          <% end %>
        </td>
      </tr>
      <tr>
        <td>出身高校</td>
        <td>
          <% if @user.profile.high.present? %>
            <%= @user.profile.high %>
          <% else %>
            未記入
          <% end %>
        </td>
      </tr>
      <tr>
        <td>出身大学</td>
        <td>
          <% if @user.profile.university.present? %>
            <%= @user.profile.university %>
          <% else %>
            未記入
          <% end %>
        </td>
      </tr>
      <tr>
        <td>現在の所属</td>
        <td>
          <% if @user.profile.affilation.present? %>
            <%= @user.profile.affilation %>
          <% else %>
            未記入
          <% end %>
        </td>
      </tr>
      <tr>
        <td>戦歴</td>
        <td>
          <% if @user.profile.history.present? %>
            <%= @user.profile.history %>
          <% else %>
            未記入
          <% end %>
        </td>
      </tr>
      <tr>
        <td>得意技</td>
        <td>
          <% if @user.profile.signature.present? %>
            <%= @user.profile.signature %>
          <% else %>
            未記入
          <% end %>
        </td>
      </tr>
      <tr>
        <td>稽古頻度</td>
        <td>
          <% if @user.profile.frequency.present? %>
            <%= @user.profile.frequency %>
          <% else %>
            未記入
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>
<div>
  <%= link_to "編集", profile_edit_user_path(@user), class: "btn btn-lg btn-primary" %>
</div>
<div class="col-md-12">
  <div>
    <h2>主催予定のイベント</h2>
  </div>
</div>
<div>
  <% @events.each do |event| %>
    <div class="col-md-4">
      <table class="table table-condensed table-hover" id="table-users">
        <tr>
          <td>都道府県</td>
          <td><%= event.prefecture %></td>
        </tr>
        <tr>
          <td>開催日</td>
          <td><%= event.event_day %></td>
        </tr>
        <tr>
          <td>開始時間</td>
          <td><%= event.start_time %></td>
        </tr>
        <tr>
          <td>終了時間</td>
          <td><%= event.finish_time %></td>
        </tr>
        <tr>
          <td>会場</td>
          <td><%= event.place %></td>
        </tr>
        <tr>
          <td>稽古レベル</td>
          <td><%= event.level %></td>
        </tr>
      </table>
    </div>
  <% end %>
</div>
<div class="col-md-12">
  <div>
    <h2>参加予定のイベント</h2>
  </div>
</div>
<div>
  <% @event2.each do |event| %>
    <div class="col-md-4">
      <table class="table table-condensed table-hover" id="table-users">
        <tr>
          <td>都道府県</td>
          <td><%= event.prefecture %></td>
        </tr>
        <tr>
          <td>開催日</td>
          <td><%= event.event_day %></td>
        </tr>
        <tr>
          <td>開始時間</td>
          <td><%= event.start_time %></td>
        </tr>
        <tr>
          <td>終了時間</td>
          <td><%= event.finish_time %></td>
        </tr>
        <tr>
          <td>会場</td>
          <td><%= event.place %></td>
        </tr>
        <tr>
          <td>稽古レベル</td>
          <td><%= event.level %></td>
        </tr>
      </table>
    </div>
  <% end %>
</div>