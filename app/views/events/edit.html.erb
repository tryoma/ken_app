<% provide(:title, 'Event-edit') %>
<% provide(:class_text, 'signup') %>
<% provide(:button_text, 'イベント編集') %>
<h1>イベント編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @event, local: true) do |f| %>
    <%= render 'shared/error_messages', object: @event %>
      <%= f.label :event_day, class: "label-#{yield(:class_text)}" %>
      <%= f.date_field :event_day, class: "form-control" %>
    
      <%= f.label :start_time, class: "label-#{yield(:class_text)}" %>
      <%= f.time_field :start_time, class: "form-control" %>
    
      <%= f.label :finish_time, class: "label-#{yield(:class_text)}" %>
      <%= f.time_field :finish_time, class: "form-control" %>
    
      <%= f.label :place, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :place, class: "form-control" %>
      
      <%= f.label :estimate_people, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :estimate_people, class: "form-control" %>
      
      <%= f.label :level, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :level, class: "form-control" %>
      
      <%= f.label :organizer_name, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :organizer_name, class: "form-control" %>
      
      <%= f.label :organizer_tel, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :organizer_tel, class: "form-control" %>
      
      <%= f.label :comment, class: "label-#{yield(:class_text)}" %>
      <%= f.text_area :comment, class: "form-control" %>
        
      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
    <% end %>
  </div>
</div>